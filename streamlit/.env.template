# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_CHAT_MODEL=gpt-5-nano
# Alternative models: gpt-5-mini, gpt-4o-mini

# Hybrid Processing Configuration
SIMILARITY_THRESHOLD=0.70
REPRESENTATIVE_QUESTION_METHOD=centroid
PROCESSING_MODE=sample
SAMPLE_SIZE=2000

# Clustering Configuration
UMAP_N_COMPONENTS=5
HDBSCAN_MIN_CLUSTER_SIZE=3
RANDOM_SEED=42

# Concurrent Processing Configuration  
MAX_CONCURRENT_REQUESTS=5
ENABLE_ASYNC_PROCESSING=true

# Caching Configuration (Performance Optimization)
CACHE_EMBEDDINGS=true
CACHE_DIR=embeddings_cache/

# Google Sheets Service Account Configuration
# For local development, you can use the JSON file path:
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/byu-pathway-chatbot-service-account.json

# Google Sheets IDs - Get these from your Google Sheets URLs
QUESTIONS_SHEET_ID=your_questions_sheet_id_here
TOPICS_SHEET_ID=your_topics_sheet_id_here

# Sync Configuration
DEFAULT_SYNC_INTERVAL_MINUTES=10

# Development Configuration
DEV_PASSWORD=your_dev_password_here

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# For Streamlit Cloud deployment, use these environment variables instead:
GOOGLE_SERVICE_ACCOUNT_TYPE=service_account
GOOGLE_SERVICE_ACCOUNT_PROJECT_ID=your_project_id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=your_client_id
GOOGLE_SERVICE_ACCOUNT_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_SERVICE_ACCOUNT_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_SERVICE_ACCOUNT_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_SERVICE_ACCOUNT_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your_service_account_email%40project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_UNIVERSE_DOMAIN=googleapis.com

# Project Configuration
PROJECT_NAME=BYU Pathway Missionary Questions Topic Modeling
DATA_PATH=data/
RESULTS_PATH=results/
